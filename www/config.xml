<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.buckeyemountain.itrack-mobile"
    version   = "2.0.0">
    <name>iTrack Mobile</name>
    
    <description>
        Mobile Release of iTrack.
    </description>
    
    <author href="http://buckeyemountain.com" email="support@buckeyemountain.com">
        Buckeye Mountain Inc
    </author>
    
    <gap:plugin name="BarcodeScanner" />
    <gap:plugin name="ChildBrowser" /> 
    <feature name="http://api.phonegap.com/1.0/device" />
    
    <preference name="phonegap-version" value="2.2.0" />
    <preference name="orientation"      value="portrait" />
    <preference name="target-device"    value="handset" />
    <preference name="fullscreen"       value="true" />
    <preference name="webviewbounce"    value="false" />
    
    <icon src="res/icon/ios/BUCKEYELOGO.png" />
    <icon src="res/icon/ios/BUCKEYELOGO.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="res/icon/ios/BUCKEYELOGO.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="res/icon/ios/BUCKEYELOGO.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="res/icon/ios/BUCKEYELOGO.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="res/icon/blackberry/icon-80.png"     gap:platform="blackberry" />
    <icon src="res/icon/blackberry/icon-80.png"     gap:platform="blackberry" gap:state="hover"/>
    <icon src="res/icon/ios/BUCKEYELOGO.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="res/icon/ios/BUCKEYELOGO.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="res/icon/ios/BUCKEYELOGO.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="res/icon/ios/BUCKEYELOGO.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="res/icon/webos/icon-64.png"          gap:platform="webos" />
    <icon src="res/icon/windows-phone/icon-48.png"  gap:platform="winphone" />
    <icon src="res/icon/windows-phone/icon-173.png" gap:platform="winphone"   gap:role="background" />
    
    <gap:splash src="res/screen/ios/Default.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/ios/Default.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/ios/Default.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/ios/Default.png" gap:platform="android" gap:density="xhdpi" />
    <gap:splash src="res/screen/ios/Default.png"         gap:platform="blackberry" />
    <gap:splash src="res/screen/ios/Default.png"                   gap:platform="ios"     width="320" height="480" />
    <gap:splash src="res/screen/ios/Default@2x.png"                gap:platform="ios"     width="640" height="960" />
    <gap:splash src="res/screen/ios/Default-568h@2x.png"           gap:platform="ios"     width="640" height="1165" />
    <gap:splash src="res/screen/ios/screen-ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="res/screen/ios/screen-ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="res/screen/ios/Default.png" gap:platform="winphone" />
</widget>
